@{
    ViewData["Title"] = "Login";
    var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
}


        @if (role != null)
        {
            <h1>Hai gi&aacute; effettuato l'accesso!</h1>
        }
        else
        {
            <h1>
                <!-- Se email o password inserite per il login sono errate stampa questo messaggio -->
                @TempData["LoginMsg"]

            </h1>
          <!-- Form per il login -->
            <div class="login__pagediv">
                @using (Html.BeginForm("Login", "User", FormMethod.Post))
                {
                    <fieldset>
                        Username
                        <br />
                        <input type="text" name="email" class="casella__user" id="email" required />
                        <br />
                        <br />
                        Password
                        <br />
                        <input type="password" name="password" class="casella__user" id="password" required />
                        <br />
                        <br />
                        <br />
                        <input type="submit" class="botton__submit" value="Log In" />

                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        Oppure
                        <br />
                        <br />
                        <input type="button" class="botton__submit" value="Sign In"
                               onclick="@("window.location.href='" + @Url.Action("Create", "User") + "'");" />

                    </fieldset>
                }

            </div>
        }
    

  

    <footer class="footer"></footer>

