@model IEnumerable<User>

@{
    ViewBag.Title = "Upo e-Commerce - GESTIONE UTENTI";
    var ruolo = HttpContextAccessor.HttpContext.Session.GetString("Role");
    bool count = false;
    var isFiltered = TempData["UtenteFilter"];

    if (Model.Count() != 0)
    {
        count = true;
    }
}

<div class="container">
    <div class="main">

        <!-- Controllo ruoli: solo admin puo' accedere alla gestione utenti -->
        @if (ruolo == null)
        {
            <h1>
                Non sei loggato!<br /><br />
                @Html.ActionLink("Login", "Login", "User")
            </h1>
        }
        else if (ruolo.Equals("user"))
        {
            <h1>Area riservata agli amministratori!</h1>
        }
        else
        {
            <h1>Lista Utenti</h1>
             <!--  Solo se model e' pieno, oppure filtro "sbagliato", ripropone il filtro  -->
            @if (count || (!count && isFiltered.Equals("True")))
            {
                <!-- FILTRI -->
                <div id="topbar">
                    <h2><b>Filtra per...</b></h2><br /><br />
                    @using (Html.BeginForm("List", "User", FormMethod.Get))
                    {
                        <fieldset>
                            <table class="table">
                                <!-- Username -->
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                <tr>
                                    <td><b>Username</b></td>
                                    <td><input type="text" name="username" /></td>
                                </tr>
                                <!-- Ruolo -->
                                <tr>
                                    <td><b>Ruolo</b></td>
                                    <td>
                                        <select name="ruolo">
                                            <option value=""></option>
                                            <option value="user">user</option>
                                            <option value="admin">admin</option>
                                        </select>
                                    </td>
                                </tr>
                            </table>
                            <br /><br /><br />
                            <input type="submit" class="botton__search" value="Applica Filtro" id="acquista" />
                            <input type="button" class="botton__search" value="Annulla Filtro"
                                   onclick="@("window.location.href='" + @Url.Action("List", "User", new { clear = "clear" }) + "'");" />
                        </fieldset>
                    }
                </div><br /><br /><br />
            }

            @if (!count)
            {
                <div id="desc">
                    <h2>Nessun Utente!</h2>
                </div>
            }

            else
            {
                <div class="tables">
                    <table class="tabel" border="1" id="utenti">
                        <tr>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Ruolo</th>
                        </tr>
                        <!-- Tabella con elenco di tutti gli utenti registrati -->
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.Email</td>
                                <td>@s.Password</td>
                                <td>@s.Role</td>
                                <td>
                                    <!-- Form per modificare i ruoli -->
                                    @using (Html.BeginForm("Update", "User", FormMethod.Post))
                                    {
                                        <fieldset>
                                            <input type="text" name="user" id="user" value="@s.UserId" hidden />
                                            <select name="ruolo" id="ruolo">
                                                <option value="user">user</option>
                                                <option value="admin">admin</option>
                                            </select>
                                            <br />
                                            <br />
                                            <input type="submit" value="Modifica Ruolo" />
                                        </fieldset>
                                    }
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            }
        }
    </div>

    <div class="footer">
        <h6>footer</h6>
    </div>
</div>